<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kid_vaccination"
    android:background="@drawable/kid_vaccination"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="635dp"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:background="@drawable/costum_edittext"
        app:cardCornerRadius="30dp"
        app:cardElevation="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Vaccinate Kid "
                android:textAlignment="center"
                android:textColor="@color/purple"
                android:textSize="32sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="60dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Choose parent :"
                android:textSize="24dp"
                android:textColor="@color/black"
                android:gravity="center"
                />
            <include layout="@layout/spinner_clients"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Choose kid :"
                android:textSize="24dp"
                android:textColor="@color/black"
                android:gravity="center"
                />
            <include layout="@layout/spinner_kid"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <EditText
                android:id="@+id/kidAge_ToVaccinate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="50dp"
                android:background="@drawable/costum_edittext"
                android:drawableLeft="@drawable/baseline_person_24"
                android:paddingLeft="15dp"
                android:hint="Kid Age (Months)"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                />

            <EditText
                android:id="@+id/kidHeight_ToVaccinate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="50dp"
                android:background="@drawable/costum_edittext"
                android:drawableLeft="@drawable/baseline_person_24"
                android:paddingLeft="15dp"
                android:hint="Kid Height (cm)"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                />
            <EditText
                android:id="@+id/kidWeight_ToVaccinate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="50dp"
                android:background="@drawable/costum_edittext"
                android:drawableLeft="@drawable/baseline_person_24"
                android:paddingLeft="15dp"
                android:hint="Kid Weight (kg)"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                />

            <EditText
                android:id="@+id/kidDate_ToVaccinate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="50dp"
                android:background="@drawable/costum_edittext"
                android:drawableLeft="@drawable/baseline_calendar_month_24_black"
                android:paddingLeft="15dp"
                android:hint="Pick Date of Vaccination"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                />

            <include layout="@layout/spinner_item_vaccine"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <Button
                android:id="@+id/Btn_add_Kid"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:text="Vaccinate Kid!"
                android:textSize="18dp"
                android:backgroundTint="@color/purple"
                app:cornerRadius = "20dp"/>


        </LinearLayout>







    </androidx.cardview.widget.CardView>

</LinearLayout>