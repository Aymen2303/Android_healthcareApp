<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:padding="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/costum_edittext">

        <!-- Add TextViews or other views to display kid information -->
        <TextView
            android:paddingLeft="15dp"
            android:id="@+id/kid_name_forUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <TextView
            android:paddingLeft="15dp"
            android:id="@+id/Nurse_name_forUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <TextView
            android:paddingLeft="15dp"
            android:id="@+id/Date_forUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:paddingBottom="5dp"
            >

        <!-- Decline Button -->
        <Button
            android:id="@+id/btn_reminder"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="left"
            android:textSize="16dp"
            android:backgroundTint="@color/purple"
            app:cornerRadius = "20dp"
            android:text="Remind Me"
            android:drawableLeft="@drawable/baseline_add_alert_white_24"
            />
        </RelativeLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>
