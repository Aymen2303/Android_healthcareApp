<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_kid"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/add_kid">




    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/costum_edittext"
        app:cardCornerRadius="30dp"
        app:cardElevation="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Add a kid "
                android:textAlignment="center"
                android:textColor="@color/purple"
                android:textSize="32sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="90dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

           <EditText
               android:id="@+id/kidName"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:height="50dp"
               android:background="@drawable/costum_edittext"
               android:drawableLeft="@drawable/baseline_person_24"
               android:paddingLeft="10dp"
               android:hint="Kid Name"
               android:textColor="@color/black"
               android:textColorHighlight="@color/cardview_dark_background"
               />
            <EditText

                android:id="@+id/kidAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="50dp"
                android:background="@drawable/costum_edittext"
                android:drawableLeft="@drawable/baseline_person_24"
                android:paddingLeft="10dp"
                android:hint="Kid Age (in Months)"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                />
            <EditText
                android:id="@+id/kidHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="50dp"
                android:background="@drawable/costum_edittext"
                android:drawableLeft="@drawable/baseline_person_24"
                android:paddingLeft="10dp"
                android:hint="Kid Height (cm)"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                />
            <EditText
                android:id="@+id/kidWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="50dp"
                android:background="@drawable/costum_edittext"
                android:drawableLeft="@drawable/baseline_person_24"
                android:paddingLeft="10dp"
                android:hint="Kid Weight (kg)"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                />
            <!-- <EditText
                android:id="@+id/kid_LastVaccinationDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="50dp"
                android:background="@drawable/costum_edittext"
                android:drawableLeft="@drawable/baseline_calendar_month_24_black"
                android:inputType="none"
                android:paddingLeft="10dp"
                android:hint="Last Vaccination Date"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:onClick="showDatePickerDialog"
                android:textColorHighlight="@color/cardview_dark_background"
                android:textAppearance="?android:attr/textAppearanceMedium"
                /> -->



            <include layout="@layout/spinner_clients"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <Button
                android:id="@+id/Btn_add_Kid"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:text="Add Kid!"
                android:textSize="18dp"
                android:backgroundTint="@color/purple"
                app:cornerRadius = "20dp"/>


        </LinearLayout>







    </androidx.cardview.widget.CardView>








</LinearLayout>